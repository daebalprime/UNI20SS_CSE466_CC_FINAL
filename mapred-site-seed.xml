<!-- Put site-specific property overrides in this file. -->
<configuration>
  <property>
    <name>mapreduce.jobtracker.address</name>
    <value>master:9001</value>
  </property>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>
  <property>
    <name>mapreduce.jobtracker.maxreducememory.mb</name>
    <value>VAR_MEMORY_REDUCE</value>
  </property>
  <property>
    <name>mapreduce.jobtracker.maxmapmemory.mb</name>
    <value>VAR_MEMORY_MAP</value>
  </property>
  <property>
    <name>mapreduce.map.cpu.vcores</name>
    <value>VAR_CPU_VCORES_MAP</value>
  </property>
  <property>
    <name>mapreduce.reduce.cpu.vcores</name>
    <value>VAR_CPU_VCORES_REDUCE</value>
  </property>

  <property>
    <name>mapreduce.map.output.compress</name>
    <value>VAR_OUTPUT_COMPRESS</value>
  </property>
  <!-- false -->
  <property>
    <name>mapreduce.tasktracker.map.tasks.maximum</name>
    <value>VAR_MAXIMUM_TASKS_MAP</value>
  </property>
  <!-- 2 -->
  <property>
    <name>mapreduce.tasktracker.reduce.tasks.maximum</name>
    <value>VAR_MAXIMUM_TASKS_REDUCE</value>
  </property>
  <!-- 2 -->

  <property>
    <name>mapreduce.task.io.sort.factor</name>
    <value>VAR_SORT_FACTOR</value>
    <!-- 10 -->
    <!-- The number of streams to merge at once while sorting files. This determines the number of open file handles. -->
  </property>
  <property>
    <name>mapreduce.task.io.sort.mb</name>
    <value>VAR_SORT_MB</value>
    <!-- 100 -->
    <!-- The total amount of buffer memory to use while sorting files, in megabytes. By default, gives each merge stream 1MB, which should minimize seeks. -->
  </property>
</configuration>
